        $(document).ready(function() {
            $('img').click(function() {
                $(this).css('border-style', 'solid', '2px')
                $(this).css('border-color','red')
            })
        });

       $(function() {
        $('#im1, #im2, #im3').mouseover(function() {
            $(this).css('width', '100px')
        })
       });

       $(function() {
        $('p').dblclick(function() {
          $(this).css('color', 'blue')
        })
      });

      $(function() {
        $('#p4, #p5').mouseover(function() {
          $(this).css('background-color', 'yellow')
        })
      });


    </script>
