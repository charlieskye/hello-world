  <script>
  window.onload=function(){

        var imsA = document.getElementsByTagName('img')

        for (let i = 0; i < imsA.length; i++) {
            imsA[i].onclick = function() {
                this.style.border="3px solid red"
             }
        }

        var imsB = document.getElementById("div1").getElementsByTagName("img")

        for (let i = 0; i < imsB.length; i++) {
            imsB[i].onmouseover = function() {
                this.style.width = "100px"
            }
        }

        var imsC = document.getElementsByTagName('p')

        for (let i = 0; i < imsC.length; i++) {
            imsC[i].ondblclick = function() {
                this.style.color = "blue"
            }
        }

        var imsD = document.getElementById("div3").getElementsByTagName("p")

        for (let i = 0; i < imsD.length; i++) {
            imsD[i].onmouseover = function() {
                this.style.backgroundColor = "yellow"
            }
        }

      }



  </script>
